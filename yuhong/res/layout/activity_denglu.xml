<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    
    tools:context="com.example.ui2.MainActivity"
    android:background="@drawable/back3" >
    
    <ImageView 
        android:id="@+id/xiaobeijing"
        android:layout_width="350sp"
        android:layout_height="200sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/bg18_fog_night" />
    <Button
        android:id="@+id/denglu"
        android:layout_height="80sp"
        android:layout_width="160sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="登录"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:background="#99000000"
        />
    <Button 
        android:id="@+id/xiaoxi"
        android:layout_width="wrap_content"
        android:layout_height="80sp"
        android:layout_below="@id/xiaobeijing"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="消息中心                            "
        android:textSize="26sp"
        android:textColor="@android:color/white"
        />
    <Button 
        android:id="@+id/pifu"
        android:layout_width="wrap_content"
        android:layout_height="80sp"
        android:layout_below="@id/xiaoxi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="皮肤助手                            "
        android:textSize="26sp"
        android:textColor="@android:color/white"
        />
    <Button 
        android:id="@+id/youxi"
        android:layout_width="wrap_content"
        android:layout_height="80sp"
        android:layout_below="@id/pifu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="小游戏                                "
        android:textSize="26sp"
        android:textColor="@android:color/white"
        />
    <Button 
        android:id="@+id/shezhi"
        android:layout_width="wrap_content"
        android:layout_height="80sp"
        android:layout_below="@id/youxi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="设置                                    "
        android:textSize="26sp"
        android:textColor="@android:color/white"
        />
    <Button 
        android:id="@+id/fanhui1"
        android:layout_width="wrap_content"
        android:layout_height="80sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="返回                                    "
        android:textSize="26sp"
        android:textColor="@android:color/white"
        />
    <ImageView 
        android:id="@+id/xiaotu1"
        android:layout_width="wrap_content"
        android:layout_height="70sp"
        android:layout_below="@id/xiaobeijing"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/notification_006"/>
    <ImageView 
        android:id="@+id/xiaotu2"
        android:layout_width="wrap_content"
        android:layout_height="70sp"
        android:layout_below="@id/xiaotu1"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/notification_008"/>

    <ImageView
        android:id="@+id/xiaotu3"
        android:layout_width="wrap_content"
        android:layout_height="70sp"
        android:layout_alignBottom="@+id/youxi"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:src="@drawable/notification_015" />

    <ImageView
        android:id="@+id/xiaotu4"
        android:layout_width="wrap_content"
        android:layout_height="70sp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/xiaotu3"
        android:layout_marginTop="5dp"
        android:src="@drawable/notification_016" />

    <ImageView
        android:id="@+id/xiaotu5"
        android:layout_width="wrap_content"
        android:layout_height="70sp"
        android:layout_alignBottom="@+id/fanhui1"
        android:layout_marginBottom="5dp"
        android:src="@drawable/notification_023" />

</RelativeLayout>
